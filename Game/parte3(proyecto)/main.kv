#:include pipe.kv
#Creacion del fondo

FloatLayout:
    Background:
        id: background
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "sky.png"
            Rectangle:
                size: self.width, 138
                pos: self.pos[0], self.pos[1] + self.height - 138
                texture: self.cloud_texture
            Rectangle:
                size: self.width, 96
                pos: self.pos[0], self.pos[1]
                texture: self.floor_texture

#Puntacion 
    Label:
        id: score
        size_hint_y: None
        height: 96
        text: "0"
        font_size: 60

#Inicio del juego
    Button:
        text: "¡Haz click!"
        background_normal: "transparent.png"
        background_down: "transparent.png"
        id: start_button
        on_release:
            self.disabled = True
            self.opacity = 0
            app.start_game()

#Personaje (personalizacion)
    Cat:
        source: "cat2.png"
        size_hint: None, None #Tamaño fijo
        size: 46, 34 #Ancho y alto
        pos: 20, (root.height - 96) / 2.0 #Posicion 
        id: cat